  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "singleQuote": true,
    "proseWrap": "always"
  },
  "devDependencies": {
    "@types/react": "17.0.34",
    "@types/react-dom": "17.0.11",
    "gh-pages": "3.2.3",
    "parcel": "2.0.0",
    "prettier": "2.4.1"
  },
  "dependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  }
}
