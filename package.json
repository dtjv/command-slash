{
  "name": "command-slash",
  "version": "0.1.0",
  "description": "A React-based command palette from within a text field.",
  "author": "David Valles <davidtjvalles@gmail.com> (https://dtjv.io/)",
  "license": "MIT",
  "private": true,
  "source": "src/index.html",
  "scripts": {
    "dev": "parcel",
    "build": "parcel build",
